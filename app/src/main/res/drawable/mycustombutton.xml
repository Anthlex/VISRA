<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#206592" />
            <gradient android:angle="-90" android:startColor="#206592" android:endColor="#206592"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2980B9" />
            <solid android:color="#2980B9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2980B9" />
            <gradient android:angle="-90" android:startColor="#2980B9" android:endColor="#2980B9" />
        </shape>
    </item>
</selector>